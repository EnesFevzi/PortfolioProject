@model AboutAddDto
<h4 class="fw-bold py-3 mb-4">
    <span class="text-muted fw-light">Hakkında Yönetimi /</span> Hakkında Ekle
</h4>

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <h5 class="card-header"></h5>
            <form asp-controller="About" asp-action="Add" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Title" id="defaultFormControlInput" class="form-label">Başlık</label>
                        <input asp-for="Title" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen başlık giriniz." aria-describedby="defaultFormControlHelp">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" for="defaultFormControlInput" class="form-label">İçerik</label>
                        <textarea asp-for="Description" rows="3" cols="40" type="text" class="form-control mb-3" id="defaultFormControlInput" style="min-height:300px;" placeholder="İçerik" aria-describedby="defaultFormControlHelp"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Age" for="defaultFormControlInput" class="form-label">Yaş</label>
                        <input asp-for="Age" type="number" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen yaş giriniz." aria-describedby="defaultFormControlHelp">
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Mail" for="defaultFormControlInput" class="form-label">Mail</label>
                        <input asp-for="Mail" type="email" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen mail giriniz." aria-describedby="defaultFormControlHelp">
                        <span asp-validation-for="Mail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" for="defaultFormControlInput" class="form-label">Adres</label>
                        <input asp-for="Address" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen adres giriniz." aria-describedby="defaultFormControlHelp">
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Linkedin" for="defaultFormControlInput" class="form-label">Linkedin</label>
                        <input asp-for="Linkedin" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen link giriniz." aria-describedby="defaultFormControlHelp">
                        <span asp-validation-for="Linkedin" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GitHub" for="defaultFormControlInput" class="form-label">Github</label>
                        <input asp-for="GitHub" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen link giriniz." aria-describedby="defaultFormControlHelp">
                        <span asp-validation-for="GitHub" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Photo" for="defaultFormControlInput" class="form-label">Resim seçiniz</label>
                        <input asp-for="Photo" type="file" accept="image/*" class="form-control mb-3" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp">
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

