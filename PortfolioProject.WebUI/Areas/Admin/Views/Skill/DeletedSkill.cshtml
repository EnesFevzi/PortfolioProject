@model List<SkillDto>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Çöp Kutusu /</span> Yetenekler
    </h4>

    <div class="card">
        <div class="table-responsive text-nowrap m-5">

            <table class="table table-bordered" id="enesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Değer</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Başlık</th>
                        <th>Değer</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr name="@item.SkillID">
                            <td>@item.Title</td>
                            <td>@item.Value</td>
                            <td>@item.CreatedBy</td>
                            <td>@(item.IsDeleted ? "Aktif Değil" : "Aktif")</td>

                            <td>

                                <a class="btn btn-warning btn-sm" data-id="@item.SkillID" asp-area="Admin" asp-controller="Skill" asp-action="UndoDelete" asp-route-skillId="@item.SkillID"><i class='bx bx-undo'></i></a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>




</div>

@section Scripts{
    <script src="~/js/skillIndex.js" type="application/ecmascript"></script>
}