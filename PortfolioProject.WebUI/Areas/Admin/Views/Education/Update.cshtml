@model EducationUpdateDto
<h4 class="fw-bold py-3 mb-4">
    <span class="text-muted fw-light">Eğitim Yönetimi /</span> Eğitim Ekle
</h4>

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <h5 class="card-header"></h5>
            <form asp-controller="Education" asp-action="Add" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="card-body">
                    <input type="hidden" asp-for="EducationID" />
                    <div class="form-group">
                        <label asp-for="Name" id="defaultFormControlInput" class="form-label">Başlık</label>
                        <input asp-for="Name" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen başlık giriniz." aria-describedby="defaultFormControlHelp">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Content" for="defaultFormControlInput" class="form-label">İçerik</label>
                        <textarea asp-for="Content" rows="3" cols="40" type="text" class="form-control mb-3" id="defaultFormControlInput" style="min-height:300px;" placeholder="İçerik" aria-describedby="defaultFormControlHelp"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartTime" for="defaultFormControlInput" class="form-label">Başlangıç Tarihi</label>
                        <input asp-for="StartTime" type="date" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen başlık giriniz." aria-describedby="defaultFormControlHelp">
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndTime" for="defaultFormControlInput" class="form-label">Bitiş Tarihi</label>
                        <input asp-for="EndTime" type="date" class="form-control mb-3" id="defaultFormControlInput" placeholder="Lütfen başlık giriniz." aria-describedby="defaultFormControlHelp">
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Güncelle</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


